@model Smarts_DoAn_Backup_27_11_2025.Models.ProductListVM

@{
    ViewBag.Title = "Product";
    var ModelDanhMuc = ViewBag.DanhMuc;
}

<main class="container my-5">

    <div class="text-center my-5">
        <h1 class="display-5 fw-bold">Danh Sách Sản Phẩm</h1>
        <p class="fs-5 text-muted">Toàn bộ sản phẩm đang trưng bày đều có sẵn hàng!</p>
    </div>

    @Html.Partial("Filter", Model.DanhMucs)

    @*Đây là danh sách sản phẩm*@

    <div class="row">
        @foreach (var item in Model.SanPhams)
        {
            <div class="col-md-4 mb-4 product-col" data-name="@item.TENSP" data-price="@item.GIA" data-tag="@item.MADM">
                <div class="card product-card h-100">
                    <img src="@item.ANHSP" class="card-img-top" alt="@item.TENSP" style=" width: 100%; height: auto; border-radius: 30px; object-fit: cover;">
                    <div class="card-body text-center d-flex flex-column">
                        <a href="@Url.Action("Details", "Products")/@item.MASP" class="text-decoration-none text-dark"><h5 class="card-title">@item.TENSP</h5></a>
                        <p class="card-text fw-bold">@string.Format("{0:N0}", item.GIA) VNĐ</p>
                        <span class="badge bg-primary align-self-center mb-2">@item.THUONGHIEU</span>
                        <button class="btn btn-dark mt-auto" onclick="addToCart('@item.MASP.Trim()', '@item.TENSP.Trim()', @item.GIA, '@item.ANHSP.Trim()')">Thêm vào giỏ</button>
                    </div>
                </div>
            </div>
        }
    </div>

    <section class="my-5 py-5">
        <div class="row align-items-center">
            <div class="col-md-5" style="padding-bottom: 15px;">
                <h2 class="fw-bold">Cẩm Nang Smartphones</h2>
                <p class="text-muted">Mọi thứ bạn cần biết trước khi mua smartphone.</p>
                <a href="#" class="btn btn-dark">Đọc Thêm</a>
            </div>
            <div class="col-md-7">
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action bg-light border-0 p-3 mb-2 rounded">
                        <h6 class="fw-bold mb-1">5 Bước để mua hàng an toàn</h6>
                        <small class="text-muted">Always</small>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action bg-light border-0 p-3 mb-2 rounded">
                        <h6 class="fw-bold mb-1">Top 5 Smartphones đáng mua 2025</h6>
                        <small class="text-muted">Always</small>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action bg-light border-0 p-3 mb-2 rounded">
                        <h6 class="fw-bold mb-1">Tại sao nên chọn SmartS?</h6>
                        <small class="text-muted">Always</small>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <section class="newsletter-box">
        <p>Đăng ký ngay để nhận tin tức mới từ cửa hàng !!!</p>
    </section>

</main>