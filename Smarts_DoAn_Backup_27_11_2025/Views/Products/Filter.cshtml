
@model IEnumerable<Smarts_DoAn_Backup_27_11_2025.Models.DANHMUC>


<section class="filter-section">
    <div class="row g-3">
        <div class="col-md-5">
            <label for="filterSearch" class="form-label">Tìm theo tên</label>
            <input type="text" class="form-control" id="filterSearch" placeholder="Ví dụ: Smartphone XS...">
        </div>
        <div class="col-md-3">
            <label for="filterTag" class="form-label">Lọc theo danh mục</label>
            <select class="form-select" id="filterTag">
                <option value="all" selected>Tất cả</option>
                @foreach (var item in Model)
                {
                    <option value="@item.MADM">@item.TENDM</option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <label for="filterPrice" class="form-label">Lọc theo giá</label>
            <select class="form-select" id="filterPrice">
                <option value="all" selected>Tất cả giá</option>
                <option value="0-100000">Dưới 100.000 VNĐ</option>
                <option value="100000-1000000">100.000 - 1.000.000 VNĐ</option>
                <option value="1000000-99999999">Trên 1.000.000 VNĐ</option>
            </select>
        </div>
    </div>
</section>