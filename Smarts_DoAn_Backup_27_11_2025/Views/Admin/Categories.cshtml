@model IEnumerable<Smarts_DoAn_Backup_27_11_2025.Models.DANHMUC>

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

<div class="main-content">
    <header class="admin-header">
        <h4 class="mb-0 fw-bold text-dark">Danh mục</h4>
        <button class="btn btn-primary" onclick="openModal('add')">
            <i class="bi bi-plus-lg me-1"></i> Thêm mới
        </button>
    </header>

    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-3">Mã danh mục</th>
                        <th>Tên danh mục</th>
                        <th>Số lượng SP</th>
                        <th class="text-end pe-3">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-3 fw-bold">@item.MADM</td>
                            <td>@item.TENDM</td>
                            <td>@item.SOLUONG_SP</td>
                            <td class="text-end pe-3">
                                <button class="btn btn-sm btn-light text-primary me-2"
                                        onclick="openModal('edit', '@item.MADM', '@item.TENDM', '@item.SOLUONG_SP')">
                                    <i class="bi bi-pencil-square"></i>
                                </button>

                                <a href="@Url.Action("DeleteCategory", new { id = item.MADM.Trim() })"
                                   class="btn btn-sm btn-light text-danger"
                                   onclick="return confirm('Bạn có chắc muốn xóa danh mục này?');">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="catModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold" id="modalTitle">Thông tin danh mục</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            @using (Html.BeginForm("SaveCategory", "Admin", FormMethod.Post))
            {
                <div class="modal-body">
                    <input type="hidden" name="Mode" id="formMode" value="add" />

                    <div class="mb-3">
                        <label class="form-label">Mã danh mục</label>
                        <input type="text" class="form-control" name="MADM" id="txtMaDM" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Tên danh mục</label>
                        <input type="text" class="form-control" name="TENDM" id="txtTenDM" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Số lượng SP</label>
                        <input type="number" class="form-control" name="SOLUONG_SP" id="txtSoLuong">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu dữ liệu</button>
                </div>
            }
        </div>
    </div>
</div>

<script>
    // Hàm mở Modal và điền dữ liệu
    function openModal(action, id, name, count) {
        // Lấy element modal
        var modalEle = document.getElementById('catModal');
        var myModal = new bootstrap.Modal(modalEle);

        if (action === 'edit') {
            // --- CHẾ ĐỘ SỬA ---
            document.getElementById('modalTitle').innerText = 'Cập nhật danh mục';
            document.getElementById('formMode').value = 'edit';

            // Điền dữ liệu vào ô input
            document.getElementById('txtMaDM').value = id;
            document.getElementById('txtMaDM').readOnly = true; // Khóa không cho sửa ID

            document.getElementById('txtTenDM').value = name;
            document.getElementById('txtSoLuong').value = count;
        } else {
            // --- CHẾ ĐỘ THÊM MỚI ---
            document.getElementById('modalTitle').innerText = 'Thêm danh mục mới';
            document.getElementById('formMode').value = 'add';

            // Xóa trắng ô input
            document.getElementById('txtMaDM').value = '';
            document.getElementById('txtMaDM').readOnly = false; // Cho phép nhập ID

            document.getElementById('txtTenDM').value = '';
            document.getElementById('txtSoLuong').value = '';
        }

        // Hiển thị modal
        myModal.show();
    }
</script>