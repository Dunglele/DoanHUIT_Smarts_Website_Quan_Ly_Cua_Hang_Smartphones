<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - SmartS</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/Content/admin-style.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex admin-wrapper">
        <div class="sidebar">
            <div class="header-title text-center"><a href="@Url.Action("Index", "Home")" style="text-decoration:none; color: white;"><h5 class="mb-0 fw-bold">SmartS Admin</h5></a></div>
            <div class="user-info text-center"><div class="avatar rounded-circle bg-primary text-white mx-auto mb-2 d-flex align-items-center justify-content-center" style="width:40px;height:40px">AD</div><p class="mb-0 small text-light">admin@smarts.com</p></div>
            <nav class="sidebar-nav">
                <ul class="list-unstyled">
                    <li><a href="@Url.Action("Dashboard", "Admin")" class="nav-link"><i class="bi bi-speedometer2"></i> Thống kê</a></li>
                    <li><a href="@Url.Action("Orders", "Admin")" class="nav-link"><i class="bi bi-box-seam"></i> Đơn hàng</a></li>
                    <li><a href="@Url.Action("Products", "Admin")" class="nav-link"><i class="bi bi-phone"></i> Sản phẩm</a></li>
                    <li><a href="@Url.Action("Categories", "Admin")" class="nav-link"><i class="bi bi-tags"></i> Danh mục</a></li>
                    <li><a href="@Url.Action("Contact", "Admin")" class="nav-link"><i class="bi bi-people-fill"></i> Liên hệ</a></li>
                    <li><a href="@Url.Action("Accounts", "Admin")" class="nav-link"><i class="bi bi-people"></i> Tài khoản</a></li>
                    <hr class="my-2 text-secondary">
                    <li><a href="@Url.Action("Logout", "Admin")" class="nav-link text-danger"><i class="bi bi-box-arrow-right"></i> Đăng xuất</a></li>
                </ul>
            </nav>
        </div>

        @RenderBody()

    </div>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/admin-script.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>